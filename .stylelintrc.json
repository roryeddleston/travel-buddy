{
    "extends": ["stylelint-config-standard"],
    "rules": {
      "at-rule-no-unknown": [true, {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen"
        ]
      }],
      "function-no-unknown": [true, {
        "ignoreFunctions": ["theme", "screen"]
      }]
    },
    "ignoreFiles": ["**/*.tsx", "**/*.ts", "**/*.jsx"]
  }